<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@color/white">

<!--  <android.support.design.widget.TabLayout-->
<!--    android:id="@+id/tl_tab"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="40dp"-->
<!--    android:visibility="gone" />-->

 <FrameLayout
   android:layout_width="match_parent"
   android:layout_height="@dimen/normal_550dp"
   android:background="@mipmap/ic_background">
   <ImageView
     android:layout_width="@dimen/normal_340dp"
     android:layout_height="@dimen/normal_160dp"
     android:src="@mipmap/icon"
     android:layout_gravity="center|bottom"
     android:layout_marginBottom="@dimen/normal_80dp"/>
 </FrameLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/normal_130dp"
    android:layout_marginLeft="@dimen/normal_60dp">
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="瞄头鹰"
    android:textColor="@color/c_31363B"
    android:textSize="@dimen/normal_75sp"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="呼叫"
      android:textColor="@color/c_1B91FF"
      android:textSize="@dimen/normal_75sp"/>
  </LinearLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/normal_45sp"
    android:textColor="@color/c_CAD2D9"
    android:text="请输入您的账号和密码!"
    android:layout_marginTop="@dimen/normal_40dp"
    android:layout_marginLeft="@dimen/normal_60dp"/>
  <EditText
    android:id="@+id/et_account"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_140dp"
    android:layout_marginLeft="@dimen/normal_60dp"
    android:layout_marginRight="@dimen/normal_60dp"
    android:hint="请输入账号"
    android:paddingLeft="@dimen/normal_50dp"
    android:background="@drawable/shape_gray_r45"
    android:layout_marginTop="@dimen/normal_50dp"
    android:textSize="@dimen/normal_42sp"
    android:textCursorDrawable="@color/c_3396FC" />
  <EditText
    android:id="@+id/et_password"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_140dp"
    android:layout_marginLeft="@dimen/normal_60dp"
    android:layout_marginRight="@dimen/normal_60dp"
    android:hint="请输入密码"
    android:paddingLeft="@dimen/normal_50dp"
    android:background="@drawable/shape_gray_r45"
    android:layout_marginTop="@dimen/normal_50dp"
    android:textSize="@dimen/normal_42sp"
    android:textCursorDrawable="@color/c_3396FC"
    android:inputType="textPassword"/>

  <TextView
    android:id="@+id/tv_login"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_142dp"
    android:layout_marginTop="@dimen/normal_60dp"
    android:layout_marginLeft="@dimen/normal_60dp"
    android:layout_marginRight="@dimen/normal_60dp"
    android:background="@drawable/shape_blue_r60"
    android:text="登录"
    android:textColor="@color/white"
    android:textSize="@dimen/normal_55sp"
    android:gravity="center"/>
</LinearLayout>
