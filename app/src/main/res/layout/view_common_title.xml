<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <cn.dlc.commonlibrary.ui.widget.status.StatusHolderView
        android:id="@+id/statusHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="@dimen/normal_300dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_54sp"
            tools:text="时光胶囊"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/leftImage"
            android:layout_width="@dimen/normal_130dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_left"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/normal_10dp"/>

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/normal_12dp"
            android:paddingRight="@dimen/normal_12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title_button_text_size"
            android:visibility="gone"
            tools:text="哈哈哈" />


        <ImageButton
            android:id="@+id/rightImage"
            android:layout_width="@dimen/normal_54dp"
            android:layout_height="@dimen/normal_54dp"
            android:layout_gravity="center|right"
            android:visibility="gone"
            tools:src="@mipmap/ic_arrow_right"
            android:layout_marginRight="@dimen/normal_30dp"/>

        <TextView
            android:id="@+id/rightText"
            android:layout_width="@dimen/normal_140dp"
            android:layout_height="@dimen/normal_84dp"
            android:layout_gravity="right|center"
            android:background="@drawable/clickable_bg"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_42sp"
            tools:text="哈哈哈"
            android:layout_marginRight="@dimen/normal_30dp"/>

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/line_color" />
    </FrameLayout>

</LinearLayout>



